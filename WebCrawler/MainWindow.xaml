<Window x:Class="webCrawlerProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:webCrawlerProject"
        mc:Ignorable="d"
        Title="WebCrawler" Height="450" Width="630">
    <Grid HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="630">
        <TreeView x:Name="urlTreeView" HorizontalAlignment="Left" Height="310" VerticalAlignment="Top" Width="620" Margin="0,10,0,0">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding ChildUrls}">
                    <TextBlock Text="{Binding RootUrl}"></TextBlock>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <Button x:Name="button" Content="Do it" HorizontalAlignment="Left" Margin="535,357,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="10,357,0,0" TextWrapping="Wrap" Text="Useless textbox" VerticalAlignment="Top" Width="369"/>
    </Grid>
</Window>
